<body>
    <div class="chat-container">
        <div class="sidebar">
            <div class="search-container">
                <input type="text" id="search" placeholder="Pesquisar">
            </div>
            <ul class="contact-list" id="contact-list">
                
            </ul>
            <div id="back-button">Voltar</div>
        </div>
        <div class="chat-area">
            <div class="chat-header" id="chat-header">
                
            </div>
            <div class="messages" id="messages">
                
            </div>
            <div class="input-area">
                <input type="text" id="message-input" placeholder="Digite uma mensagem">
                <button id="send-button">Enviar</button>
            </div>
        </div>
    </div>

    <script>
        const contacts = [
            { id: 1, name: "Felipe", image: "Ellipse 14.png", lastMessage: "E a√≠, firmeza? T√¥ te vendo direto na academia, t√° pegando pesado, hein?", time: "14:50" },
            { id: 2, name: "Cocielo", image: "Ellipse 10.png", lastMessage: "t√° saindo da aula j√°", time: "17:13" },
            { id: 3, name: "Dasdores", image: "Ellipse 9.png", lastMessage: "te vi na academia, gatinho rs", time: "18:43" },
        ];

        const messages = [
            { id: 1, content: "E a√≠, firmeza? T√¥ te vendo direto na academia, t√° pegando pesado, hein?", time: "14:50", sent: false },
            { id: 2, content: "Fala, mano! T√¥ tentando, n√©? Hoje √© dia de perna... vou sair mancando üòÖ", time: "14:51", sent: true },
           
        ];

        function renderContacts() {
            const contactList = document.getElementById('contact-list');
            contactList.innerHTML = '';
            contacts.forEach(contact => {
                const li = document.createElement('li');
                li.className = 'contact';
                li.innerHTML = `
                    <img src="${contact.image}" alt="${contact.name}" class="contact-image" data-id="${contact.id}">
                    <div class="contact-info">
                        <div class="contact-name">${contact.name}</div>
                        <div class="contact-last-message">${contact.lastMessage}</div>
                    </div>
                    <div class="contact-time">${contact.time}</div>
                `;
                contactList.appendChild(li);
            });
        }

        function renderMessages() {
            const messagesContainer = document.getElementById('messages');
            messagesContainer.innerHTML = '';
            messages.forEach(message => {
                const div = document.createElement('div');
                div.className = `message ${message.sent ? 'sent' : 'received'}`;
                div.innerHTML = `
                    <div class="message-content">${message.content}</div>
                    <div class="message-time">${message.time}</div>
                `;
                messagesContainer.appendChild(div);
            });
        }

        function renderChatHeader() {
            const chatHeader = document.getElementById('chat-header');
            const currentContact = contacts[0]; 
            chatHeader.innerHTML = `
                <img src="${currentContact.image}" alt="${currentContact.name}" class="contact-image">
                <div class="contact-name">${currentContact.name}</div>
            `;
        }

        function init() {
            renderContacts();
            renderMessages();
            renderChatHeader();

            
            document.getElementById('contact-list').addEventListener('click', function(e) {
                if (e.target.classList.contains('contact-image')) {
                    const input = document.createElement('input');
                    input.type = 'file';
                    input.accept = 'image/*';
                    input.onchange = function() {
                        const file = input.files[0];
                        if (file) {
                            const reader = new FileReader();
                            reader.onload = function(e) {
                                const contactId = parseInt(this.dataset.id);
                                const contact = contacts.find(c => c.id === contactId);
                                if (contact) {
                                    contact.image = e.target.result;
                                    renderContacts();
                                    renderChatHeader();
                                }
                            };
                            reader.readAsDataURL(file);
                        }
                    };
                    input.click();
                }
            });

            
            document.getElementById('send-button').addEventListener('click', function() {
                const input = document.getElementById('message-input');
                const content = input.value.trim();
                if (content) {
                    const newMessage = {
                        id: messages.length + 1,
                        content: content,
                        time: new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}),
                        sent: true
                    };
                    messages.push(newMessage);
                    renderMessages();
                    input.value = '';
                }
            });

            
            document.getElementById('back-button').addEventListener('click', function() {
                alert('Bot√£o Voltar clicado!');
                
            });
        }

        init();
    </script>
</body>
</html>
