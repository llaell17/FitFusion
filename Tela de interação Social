    <input type="file" id="image-input" accept="image/*" style="display: none;">

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const postInput = document.querySelector('.post-input');
            const postButton = document.querySelector('.post-button');
            const imageButton = document.getElementById('image-button');
            const imageInput = document.getElementById('image-input');
            const imagePreview = document.getElementById('image-preview');
            const feed = document.getElementById('feed');

            
            postInput.addEventListener('input', () => {
                postButton.disabled = !postInput.value.trim() && !imagePreview.src;
            });

            
            imageButton.addEventListener('click', () => {
                imageInput.click();
            });

            imageInput.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        imagePreview.src = e.target.result;
                        imagePreview.style.display = 'block';
                        postButton.disabled = false;
                    };
                    reader.readAsDataURL(file);
                }
            });

            
            postButton.addEventListener('click', () => {
                const content = postInput.value.trim();
                const imageUrl = imagePreview.src;
                
                if (content || imageUrl) {
                    const post = document.createElement('div');
                    post.className = 'post';
                    post.innerHTML = `
                        <div class="post-header">
                            <img src="Ellipse 3.png" alt="Avatar" class="avatar">
                            <div class="post-user-info">
                                <h3>Galo Branco</h3>
                                <span>@GaloBranco • ${new Date().toLocaleTimeString()}</span>
                            </div>
                        </div>
                        <div class="post-content">
                            ${content ? `<p>${content}</p>` : ''}
                            ${imageUrl ? `<img src="${imageUrl}" alt="Post image" class="post-image">` : ''}
                        </div>
                        <div class="post-engagement">
                            <button class="engagement-button">
                                <i class="far fa-comment"></i>
                                <span>0</span>
                            </button>
                            <button class="engagement-button">
                                <i class="fas fa-retweet"></i>
                                <span>0</span>
                            </button>
                            <button class="engagement-button">
                                <i class="far fa-heart"></i>
                                <span>0</span>
                            </button>
                            <button class="engagement-button">
                                <i class="far fa-share-square"></i>
                            </button>
                        </div>
                    `;

                    feed.insertBefore(post, feed.firstChild);
                    postInput.value = '';
                    imagePreview.src = 'image 7.png';
                    imagePreview.style.display = 'none';
                    postButton.disabled = true;
                }
            });

            
            const samplePosts = [
                {
                    content: "Treino de fortalecimento do tornozelo",
                    image: "dfa63750-imagem-do-whatsapp-de-2024-09-08-as-16.19.02_d0b2079f-960x640%201.png"
                },
                {
                    content: "Treino leve pro jogo amanhã",
                    image: null
                }
            ];

            samplePosts.forEach(post => {
                const postElement = document.createElement('div');
                postElement.className = 'post';
                postElement.innerHTML = `
                    <div class="post-header">
                        <img src="image 7.png" alt="Avatar" class="avatar">
                        <div class="post-user-info">
                            <h3>NeymarJr</h3>
                            <span>@NeymarJr • ${new Date().toLocaleTimeString()}</span>
                        </div>
                    </div>
                    <div class="post-content">
                        ${post.content ? `<p>${post.content}</p>` : ''}
                        ${post.image ? `<img src="${post.image}" alt="Post image" class="post-image">` : ''}
                    </div>
                    <div class="post-engagement">
                        <button class="engagement-button">
                            <i class="far fa-comment"></i>
                            <span>0</span>
                        </button>
                        <button class="engagement-button">
                            <i class="fas fa-retweet"></i>
                            <span>0</span>
                        </button>
                        <button class="engagement-button">
                            <i class="far fa-heart"></i>
                            <span>0</span>
                        </button>
                        <button class="engagement-button">
                            <i class="far fa-share-square"></i>
                        </button>
                    </div>
                `;
                feed.appendChild(postElement);
            });
        });
    </script>
</body>
